<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.communique">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_new_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_new_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Communique">
        <activity android:name=".views.Chat"></activity>
        <activity android:name=".views.ContactList" />
        <activity android:name=".views.Home" />
        <activity android:name=".views.ProfileSetup" />
        <activity android:name=".views.Login" />
        <activity android:name=".views.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.Test" />
        <activity android:name=".views.Permissions" />
        <activity android:name=".views.UserProfile" />
    </application>

</manifest>